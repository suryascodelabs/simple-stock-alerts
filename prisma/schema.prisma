// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Store {
  id         Int      @id @default(autoincrement())
  shop       String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  inventories ProductVariantInventory[]
  alerts     LowStockAlert[]
}

model ProductVariantInventory {
  id              Int      @id @default(autoincrement())
  shopId          Int
  shop            Store    @relation(fields: [shopId], references: [id])
  inventoryItemId String
  locationId      String
  variantId       String?
  productId       String?
  available       Int
  source          String?
  updatedAt       DateTime
  createdAt       DateTime @default(now())
  lastSyncedAt    DateTime @updatedAt

  @@unique([shopId, inventoryItemId, locationId])
}

model ShopSettings {
  id              Int      @id @default(autoincrement())
  shop            String   @unique
  globalThreshold Int      @default(5)
  alertEmails     String   @default("")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model LowStockAlert {
  id              Int      @id @default(autoincrement())
  shopId          Int
  shop            Store    @relation(fields: [shopId], references: [id])
  inventoryItemId String
  variantId       String?
  productId       String?
  available       Int
  threshold       Int
  status          String   @default("ready") // ready, sent, cleared
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  resolvedAt      DateTime?

  @@index([shopId, status])
  @@index([shopId, inventoryItemId])
}
